generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model HeartMemory {
  id        Int      @id @default(autoincrement())
  imageUrl  String   @db.VarChar(500)
  nickname  String   @default("") @db.VarChar(50)
  message   String
  createdAt DateTime @default(now())
}
